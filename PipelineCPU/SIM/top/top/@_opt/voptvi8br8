library verilog;
use verilog.vl_types.all;
entity mux_adder is
    port(
        a               : in     vl_logic_vector(3 downto 0);
        b               : in     vl_logic_vector(3 downto 0);
        ci              : in     vl_logic;
        co              : out    vl_logic;
        sum             : out    vl_logic_vector(3 downto 0)
    );
end mux_adder;
